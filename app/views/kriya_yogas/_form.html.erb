<%= form_with(model: @kriya_yoga, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-input description" %>
    </div>

    <div class="form-group">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image_name, class: "form-input" %>
      <%if @kriya_yoga.presence%>
        <div class='image-name'> <%= @kriya_yoga.image_name %></div>
      <%end%>
    </div>

    <div class="form-group">
      <%= form.label :enlightened_being_name, "By Enlightened Being", class: "form-label" %>
      <%= form.text_field :enlightened_being, class: "form-input"%>
    </div>

    <div class="form-group">
      <%= form.label :reference_name, class: "form-label" %>
      <%= form.text_field :reference_name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :video, class: "form-label" %>
      <%= form.file_field :video, class: "form-input" %>
      <%if @kriya_yoga.presence%>
        <div class='video-name'> <%= @kriya_yoga.video %></div>
      <%end%>
    </div>


    <div class="form-actions">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>