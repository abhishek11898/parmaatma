<div class='card-container' total-records=<%= total_records%>>
  <% kriya_yogas.each_slice((kriya_yogas.size / 3.0).ceil).with_index do |slice, index| %>
    <div class='row-<%= index + 1 %>'>
      <% slice.each do |kriya_yoga| %>
        <div class='card' data-controller-name='kriya_yogas' data-id='<%= kriya_yoga.id %>'>
          <%= image_tag kriya_yoga.image_url, class: 'card-image' %>
          <div class='title'>
            <%= kriya_yoga.title %>
          </div>
          <div class='by-enlitened-being'>
            --By <%= kriya_yoga.enlightened_being.name%>
          </div>
          <div class='description'>
            <%= kriya_yoga.description %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class='load-more-button'>
  <button id="load-more">Load More</button>
</div>
