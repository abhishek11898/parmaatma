<div class='card-container' total-records=<%= total_records%>>
  <% tantra_margs.each_slice((tantra_margs.size / 3.0).ceil).with_index do |slice, index| %>
    <div class='row-<%= index + 1 %>'>
      <% slice.each do |tantra_marg| %>
        <div class='card' data-controller-name='tantra_margs' data-id='<%= tantra_marg.id %>'>
          <%= image_tag tantra_marg.image_url, class: 'card-image' %>
          <div class='title'>
            <%= tantra_marg.title %>
          </div>
          <div class='by-enlitened-being'>
            --By <%= tantra_marg.enlightened_being.name%>
          </div>
          <div class='description'>
            <%= tantra_marg.description %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class='load-more-button'>
  <button id="load-more">Load More</button>
</div>
