<div class='card-container' total-records=<%= total_records%>>
  <% aghori_margs.each_slice((aghori_margs.size / 3.0).ceil).with_index do |slice, index| %>
    <div class='row-<%= index + 1 %>'>
      <% slice.each do |aghori_marg| %>
        <div class='card'>
          <%= image_tag aghori_marg.image_url, class: 'card-image' %>
          <div class='title'>
            <%= aghori_marg.title %>
          </div>
          <div class='by-enlitened-being'>
            --By Sadhguru
          </div>
          <div class='description'>
            <%= aghori_marg.description %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class='load-more-button'>
  <button id="load-more">Load More</button>
</div>
