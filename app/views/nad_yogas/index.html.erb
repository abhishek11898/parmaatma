<%= stylesheet_link_tag 'bhakti_yoga.css' %>
<%= javascript_include_tag 'bhakti_yoga.js'%>

<div class='yoga-marg-container'>
  <div class='yoga-marg-section'>
    <div class='bhakti-yoga'>
      <div class='yoga-section-one'>
        <div>
          <div class='yoga-header'>
            <%= image_tag "grunge6.png", class: 'yoga-grunge-1'%>
            <div class='yoga-title'>
              Nad Yoga
            </div>
          </div>
          <div class='yoga-quate-section'>
            <%= image_tag "grunge2.png", class: 'yoga-grunge-2'%>
            <div class='yoga-quate'>
              Nada Yoga is the path of listening, of deep attunement to the subtle vibrations of the universe. Through this listening, we merge with the divine melody that sustains all of creation.
            </div>
          </div>
        </div>
        <div class='yoga-images'>
          <%= image_tag "natraj3", class: 'yoga-image'%>
        </div>
      </div>
    </div>
    <%if admin_signed_in?%>
      <div class='buttons'>
        <%= link_to "Add-Item",  new_nad_yoga_path, class: 'add-item'%>
      </div>
    <%end%>
    <div class='bhakti-yogas-list'>
      <div class='yoga-section-two'>
        <%if @nad_yogas.present? %>
          <%= render partial: 'card', locals: { nad_yogas: @nad_yogas, total_records: @total_records} %>
        <%end%>
      </div>
    </div>
  </div>
</div>