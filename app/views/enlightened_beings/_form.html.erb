<%= form_with(model: @enlightened_being, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :about, class: "form-label" %>
      <%= form.text_area :about, class: "form-input about" %>
    </div>

    <div class="form-group">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image_name, class: "form-input" %>
      <%if @enlightened_being.image_name.presence%>
        <div class='image-name'> <%= @enlightened_being.image_name %></div>
      <%end%>
    </div>

    <div class="form-group">
      <%= form.label :adress, "Address", class: "form-label" %>
      <%= form.text_field :adress, class: "form-input"%>
    </div>

    <div class="form-group">
      <%= form.label :birth_date, class: "form-label" %>
      <%= form.datetime_field :birth_date, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :mahasamadhi, class: "form-label" %>
      <%= form.datetime_field :mahasamadhi, class: "form-input", data: { behavior: "datepicker" }%>
    </div>

    <div class="form-group">
      <%= form.label :country, class: "form-label" %>
      <%= form.text_field :country, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :alive, class: "form-label" %>
      <%= form.check_box :alive, class: "form-checkbox" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>