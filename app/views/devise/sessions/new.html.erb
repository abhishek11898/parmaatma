<%= stylesheet_link_tag 'admin' %>

<div class='admin-container'>
  <%= image_tag 'intelligance.jpg', class: 'intelligance-background-image' %>
  <div class='logo-and-navbar'> 
    <div class='aum-logo-div'>
      <%= image_tag "aum_logo.png", class: 'aum-logo'%>
    </div>
    <div class='menu-bar-icon-div'>
      <%= image_tag "menu_bar_icon.png", class: 'menu-bar-icon show'%>
      <%= image_tag "close.png", class: 'menu-bar-icon show-drag-and-drop hide'%>
    </div>
  </div>
  <div class='login-container'>
		<div class="card">
      <div class="card-header">
        <h1>Admin-Login</h1>
      </div>
			<div class="card-body"> 
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
          <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= form.check_box :remember_me %>
              <%= form.label :remember_me %>
            </div>
          <% end %>
          <div class="sign-in-btn">
            <%= form.submit "Login", class: "btn btn-primary" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
		</div>
  </div>
</div>

<div class='navbar-menu hide'>
	<div class='navbar-main-div'>
	<div class='page-link'><%= link_to "Home", '/' %></div>
    <div class='page-link'><%= link_to "Bhakti Yoga", bhakti_yogas_path %> </div>
    <div class='page-link'><%= link_to "Gyan Yoga", gyan_yogas_path %></div>
    <div class='page-link'><%= link_to "Karam Yoga", karam_yogas_path %></div>
    <div class='page-link'><%= link_to "Kriya Yoga", kriya_yogas_path %></div>
    <div class='page-link'><%= link_to "Kundalini Yoga", kundalini_yogas_path %></div>
    <div class='page-link'><%= link_to "Tantra Marg", tantra_margs_path %></div>
    <div class='page-link'><%= link_to "Aghori Marg", aghori_margs_path %></div>
    <div class='page-link'><%= link_to "Nad Yoga", nad_yogas_path %></div>
	<div class='page-link'><%= link_to "Enlightened beings", enlightened_beings_path %></div>
  </div>
</div>
